h1 NOTES

.row
  .small-8.columns
    h3 VIEW
    table#notes
      thead
        tr
          th Delete
          th Title
          th Tags
      tbody
        tr(ng-repeat='note in notes')
          td
            a(ng-click='nuke(note)'): i.fa.fa-trash
          td: a(ui-sref='notes.detail({noteId:note.note_id})') {{note.title}}
          td
            span.tag(ng-repeat='name in note.tags')
              a(ui-sref='notes.list({tag:name})') {{name}}          
          
  .small-4.columns
    form(name='noteForm', enctype='multipart/form-data')
      fieldset
        legend Create Note
        label Title
        input(type='text', ng-model='note.title')
        label Note
        textarea(ng-model='note.body')
        label Tags
        input(type='text', ng-model='note.tags', placeholder='tag1, tag2, tag3')
        label Photos
        input(ng-file-select, type='file', name='files', accept="image/*", ng-model='photos', ng-file-model='photos', ng-multiple='true')
        button.radius.success(type='button', ng-click='create(note)') Create

    h3 uploading
    table
      thead
        tr
          th Files
          th Uploaded
      tbody
        tr
          td {{files.length}}
          td {{count}}
